<div class="container p-4">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-11">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#home">Paciente</a>
                </li>
                <li class="nav-item">
                   <a class="nav-link" data-toggle="tab" href="#menu1">Pacientes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#menu2">Enfermedades</a>
                </li>
            </ul>
            <div class="tab-content">
                <div id="home" class="container tab-pane active"><br>
                        <h5 style="text-align: center;">Generar reporte del paciente</h5><br>
                        <input class="form-control form-control-md" id="myInput" type="text" placeholder="Buscar..."><br>
                        <div class="form-group">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                    <th>NSS</th>
                                    <th>Nombre</th>
                                    <th>Género</th>
                                    <th>Edad</th>
                                    <th>Acción</th>
                                    </tr>
                                </thead>
                                <tbody id="myTable">
                                    {{#each links}}
                                        <form action="/reportes/GenRepo" method="POST"> 
                                        <tr>
                                        <td>{{this.NSS}} </td>
                                        <td>{{this.NombrePaciente}} {{this.ApellidoPaternoPaciente}} {{this.ApellidoMaternoPaciente}}</td> 
                                        <td>{{this.SexoPaciente}}</td>
                                        <td>{{this.edad}}</td>
                                        <td><button class="btn btn-success">Generar</button></td>               
                                        </tr>
                                        <div class="form-group">
                                            <input class="form-control" type="text" hidden name="NSS" value="{{this.NSS}}">
                                        </div>
                                    </form>     
                                    {{/each}}               
                                </tbody>
                            </table>
                        </div>
                </div>
                <div id="menu1" class="container tab-pane"><br>
                    <h5 style="text-align: center;">Generar reporte por grupos de paciente paciente</h5><br>
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                            <th>Reportes por género masculino</th>
                            <th>Reportes por género femenino</th>
                            <th>Todos los pacientes</th>
                            </tr>
                        </thead>
                        <tbody id="myTable">
                                <tr>
                                <td> <a class="btn btn-info" href="/reportes/reporta">Generar</a></td>
                                <td> <a class="btn btn-info" href="/reportes/reportaF">Generar</a></td> 
                                <td> <a class="btn btn-info" href="/reportes/reportaT">Generar</a></td>           
                                </tr>        
                        </tbody>
                    </table>
                </div>

                <div id="menu2" class="container tab-pane">
                    <br><h5 style="text-align: center;">Generar reporte de pacientes con tales enfermedades</h5><br>
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                            <th>Arritmia</th>
                            <th>Cardiopatia</th>
                            <th>Deficiencia cardiaca</th>
                            <th>Hipertension</th>
                            <th>Angina de pecho</th>
                            </tr>
                        </thead>
                        <tbody id="myTable">
                                <tr>
                                <td> <a class="btn btn-info" href="/reportes/reporta">Generar</a></td>
                                <td> <a class="btn btn-info" href="/reportes/reportaF">Generar</a></td> 
                                <td> <a class="btn btn-info" href="/reportes/reportaT">Generar</a></td>   
                                <td> <a class="btn btn-info" href="/reportes/reportaF">Generar</a></td> 
                                <td> <a class="btn btn-info" href="/reportes/reportaT">Generar</a></td>           
                                </tr>        
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>