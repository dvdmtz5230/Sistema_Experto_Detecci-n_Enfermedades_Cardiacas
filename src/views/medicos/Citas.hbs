<div class="container p-4">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-11">
            <h1>Citas</h1>
            <input class="form-control form-control-md" id="myInput" type="text" placeholder="Buscar..."><br>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-11">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>NSS</th>
                            <th>Nombre</th>
                            <th>Fecha</th>
                            <th>Hora</th>
                            <th></th>
                            </tr>
                    </thead>
                    <tbody id="myTable">
                        {{#each consulta}}
                        <tr>
                            <td>{{this.NSS}}</td>
                            <td>{{this.NombrePaciente}} {{this.ApellidoPaternoPaciente}} {{this.ApellidoMaternoPaciente}}</td>
                            <td>{{this.fecha}}</td>
                            <td>{{this.Hora}}</td>
                            <td><a href="/medicos/atencion/{{this.idCitas}}" class="btn btn-success">Atender</a></td>
                        </tr>
                        {{/each}}                   
                    </tbody>
                </table>
            </div>
        </div>
        </div>
    </div>
</div>



<script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

    <script>
        Handlebars.registerHelper("if_eq", function(a,b,opts){
            if(a==b){
                return opts.fn(this);
            }else{
                return opts.inverse(this);
            }
        });
    </script>