<div class="container p-4">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-11">
        <h2>Ficha médica</h2>
            
        </div>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-11">
                <div class="form-group">
        <form action="/links/editFicha/{{links.FichaMedica}}" method="POST">
            <table class="table table-dark table-striped">
 <br>
 <br>

 <h5><b>Datos del médico que receta:</b></h5>
 <tr>
    <th>Médico que receta:</th>
    <td>{{links.NombreMedico}} {{links.ApellidoPaternoMedico}} {{links.ApellidoMaternoMedico}}</td>
     
  </tr>
  <tr style="color: black;">
    <th>Cedula médico:</th>
    <td>{{links.CedulaProfesional}}  </td>
     
  </tr>
  </table>
  <br>
   <h5><b>Datos del paciente:</b></h5>
   <table>
 <tr>
    <th>NSS:</th>
    <td>{{links.NSS}}</td>
     
  </tr>
  <tr>
    <th> Nombre paciente:</th>
   
    <td> {{links.NombrePaciente}} {{links.ApellidoPaternoPaciente}} {{links.ApellidoMaternoPaciente}}</td>
   
      
       </tr>
  <tr>
    <th> Edad:</th>
    <td>{{links.edad}}</td>
  </tr>
  
  <tr>
    <th> Género:</th>
    <td>{{links.SexoPaciente}}</td>
  </tr>
  <tr>
    <th>Fecha:</th>
    <td>{{links.fecha}}</td>
    
  </tr>
  <tr>
    <th>Diagnóstico:</th>
    <td>{{links.diagnostico}}</td>
     
  </tr>
  {{#if user.CedulaProfesional}}
  <tr>
    <th>Peso:</th>
    <td> <input type="text" value="{{links.peso}}" class="form-control" name="peso" placeholder="ingrese peso en Kg del paciente"></td> 
  </tr>
   <tr>
    <th>Estatura:</th>
    <td> <input type="text" value="{{links.estatura}}" class="form-control" name="estatura" placeholder="ingrese estatura en mts del paciente"></td>
  </tr>
  <tr>
    <th>Observaciones:</th>
    <td><textarea   type="text  rows="10" cols="40""    name="observaciones">{{links.observaciones}}</textarea></td>
  </tr>
  <tr>
    <th>Medicamentos:</th>
    <td><textarea  type="text rows="10" cols="40"" name="medicamentos">{{links.medicamentos}}</textarea></td>
  </tr>
   
  {{else if user.Correo}}
  <tr>
    <th>Peso:</th>
    <td> <input type="text" value="{{links.peso}}" class="form-control" name="peso" placeholder="ingrese peso en Kg del paciente"></td> 
  </tr>
   <tr>
    <th>Estatura:</th>
    <td> <input type="text" value="{{links.estatura}}" class="form-control" name="estatura" placeholder="ingrese estatura en mts del paciente"></td>
  </tr>
  <tr>
    <th>Observaciones:</th>
    <td><textarea   type="text  rows="10" cols="40""    name="observaciones">{{links.observaciones}}</textarea></td>
  </tr>
  <tr>
    <th>Medicamentos:</th>
    <td><textarea  type="text rows="10" cols="40"" name="medicamentos">{{links.medicamentos}}</textarea></td>
  </tr>
  
  {{else if user.NSS}}
  <tr>
    <th>Peso:</th>
    <td> <input disabled type="text" value="{{links.peso}}" class="form-control" name="peso" placeholder="ingrese peso en Kg del paciente"></td> 
  </tr>
   <tr>
    <th>Estatura:</th>
    <td> <input disabled type="text" value="{{links.estatura}}" class="form-control" name="estatura" placeholder="ingrese estatura en mts del paciente"></td>
  </tr>
  <tr>
    <th>Observaciones:</th>
    <td><textarea  disabled  type="text  rows="10" cols="40""    name="observaciones">{{links.observaciones}}</textarea></td>
  </tr>
  <tr>
    <th>Medicamentos:</th>
    <td><textarea disabled  type="text rows="10" cols="40"" name="medicamentos">{{links.medicamentos}}</textarea></td>
  </tr>
  {{/if}}
  <div class="form-group">
  <input type="text" hidden name="NSS" class="form-control" value="{{links.NSS}}">
  <input type="date" hidden name="fecha" class="form-control" value="{{links.fecha}}">
  <input type="text" hidden name="CedulaProfesional" class="form-control" value="{{user.CedulaProfesional}}">
   <input type="text" hidden name="diagnostico" class="form-control" value="{{links.diagnostico}}">
  </div>
</table> 

<div class="form-group">
  {{#if user.CedulaProfesional}}
  <button class="btn btn-success btn-block">Editar</button>
  <br>
  <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal1">
          
          Eliminar Receta
          
          </button>
  {{/if}}
   {{#if user.Correo}}
  <button class="btn btn-success btn-block">Editar</button>
  <br>
  <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal1">
          
          Eliminar Receta
          
          </button>
  {{/if}}
  <br>
  <a href="/links/FichaMEdica/{{links.NSS}}" class="btn btn-info">Regresar</a>
 </div>
</form>

</div>
                
            </div>
           
            
        </div>
        
        </div>
    </div>
</div>
<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>
<h2>HTML Table</h2>

 
  <!-- The Modal -->
  <div class="modal" id="myModal1">
    <div class="modal-dialog">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h2>¿Seguro que desea eliminar receta?</h2>
          <button type="button" class="close" data-dismiss="modal">×</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
          <form action="/links/deleteFicha/{{links.FichaMedica}}" method="Get">

                        <div class="form-group">
                            
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Si,eliminar</button>
                        </div>
                    </form>
                    
                    </div>
        
        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
        </div>
        
      </div>
    </div>
  </div>